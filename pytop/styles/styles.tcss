MeterHeader {
    height: auto;
    margin: 1;
}

MeterHeader .meter-col {
    height: auto;
}

MeterHeader .meter-row {
    height: 1;
}

Main {
    overflow-y: hidden;
}

Main .activated {
    height: 1fr;
    width: auto;
    overflow-x: hidden;
}

Main .deactivated {
    height: 0;
    width: 0;
}

Main Setup {
    height: 1fr;
    width: auto;
}
