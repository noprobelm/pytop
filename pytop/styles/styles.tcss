MeterHeader {
    height: auto;
    margin: 1;
}

#c1, #c2, #c3, #c4 {
    height: auto;
}

MeterHeader .meter-row {
    height: 1;
}

MeterHeader .meter {
    width: 1fr;
}

Main {
    overflow-y: hidden;
}

Main .activated {
    height: 1fr;
    width: 100%;
    overflow-x: hidden;
}

Main .deactivated {
    height: 0;
    width: 0;
}

Main Setup {
    height: 1fr;
    width: auto;
}
